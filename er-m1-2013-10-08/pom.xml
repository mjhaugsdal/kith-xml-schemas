                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <configuration>
                    <excludes>
                        <exclude>**/no/kith/xmlstds/eresept/forskrivning/**</exclude>
                    </excludes>
                </configuration>
            </plugin>
        </plugins>
